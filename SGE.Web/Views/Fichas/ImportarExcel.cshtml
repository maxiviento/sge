@model ImportarExcelVista
@{
    ViewBag.Title = "Importar Excel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    @Content.Script("SGE.Fichas.js", Url)
}
<div class="box">
    <h2>
        Importar Excel</h2>
    @using (Html.BeginForm("ImportarExcel", "Fichas", FormMethod.Post, new { id = "FormImportarExcel", enctype = "multipart/form-data" }))
    {
        <table align="center" style="width: 950px;">
            <tr>
                <td>
                    <fieldset style="width: 925px;">
                        <legend align="center"><b>Importar Excel para actualización de Estados</b></legend>
                        <table align="left" style="width: 920px;">
                            <tr>
                                <td>
                                    <input type="file" id="archivo" name="archivo" size="20" onchange="check_extension(this.value,'btnsubir');" />
                                    <a id="btnsubir" class="btnIngresar"  style="display: none;">
                                        Subir</a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <br />
                                    @Html.LabelForModel(Model.Mensaje)
                                </td>
                            </tr>
                        </table>
                        <div>
                            @if (Model.Importado)
                            {
                                <a class="btnIngresar" id="btnProcesarExcel">Procesar</a>
                            }
                            @Html.ActionLink("Cancelar", "Index", "Fichas", null, new { Class = "btnIngresar" })</div>
                        <br />
                    </fieldset>
                </td>
            </tr>
        </table> 
        @Html.HiddenFor(c => c.Archivo)
    }
</div>
