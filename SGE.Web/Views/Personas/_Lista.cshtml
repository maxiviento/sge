@model PersonasVista
@if (Model.personas != null && Model.personas.Count > 0)
{ 
    <div style="text-align:center;">
        <table id="grilla" align="center" width="925px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30px" width="150px">
                        <div align="left">DNI</div>
                    </th>
                    <th width="250px">
                        <div align="left">Apellido</div>
                    </th>
                    <th width="250px">
                        <div align="left">Nombre</div>
                    </th>
                    <th width="70px">
                        <div align="left">Acciones</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.personas)
                {
                    <tr>
                        <td style="height: 28px; text-align: left;">
                            @item.dni.ToMaxLenght(12)
                        </td>
                        <td style="text-align: left;">
                            @item.apellido.ToMaxLenght(100)
                        </td>
                        <td style="text-align: left;">
                            @item.nombre.ToMaxLenght(100)
                        </td>
                        <td>
                            @Html.ActionLink("Ver", "Ver", "Personas", new { IdPersona = item.id_persona }, new { @class = "Lupa", title = "Ver Persona" })
                            @Html.ActionLink("Modificar", "Modificar", "Personas", new { IdPersona = item.id_persona }, new { @class = "Modificar", title = "Modificar Persona" })
                            @Html.ActionLink("Actor Rol", "ActorRol", "Personas", new { IdPersona = item.id_persona }, new { @class = "Modificar", title = "Editar Actores Roles" })
                            @*@Html.ActionLink("Eliminar", "Eliminar", "Personas", new { IdCarrera = item.IdCarrera }, new { @class = "Eliminar", title = "Eliminar Carrera" })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <table align="center" width="930px" cellpadding="0" cellspacing="0">
        <tr>
            <td width="930px">
                @Html.Partial("_SinDatos", "Personas")
            </td>
        </tr>
    </table>
}