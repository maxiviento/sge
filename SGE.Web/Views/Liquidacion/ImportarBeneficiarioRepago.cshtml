@model LiquidacionVista
@{
    ViewBag.Title = "Importar Beneficiario Repagos";
    ViewBag.SubMenuSelected = "ImportarLiquidacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
    TempData["Vista"] = Model;
}
@section Scripts{
    @Content.Script("SGE.Liquidacion.js", Url)
}
<div class="box">
    <h2>
        Liquidación - Importar Beneficiarios Repagos</h2>
    @using (Html.BeginForm("SubirArchivoRepago", "Liquidacion", FormMethod.Post, new { id = "FormImportar", enctype = "multipart/form-data" }))
    {
        <table align="center" style="width: 950px;">
            <tr>
                <td>
                    <fieldset style="width: 925px;">
                        <legend><b>Importar Beneficiarios</b></legend>
                        <table align="center" style="width: 915px;">
                            <tr>
                                <td>
                                    <input type="file" id="archivorepago" name="archivorepago" size="20"  onchange="check_extension(this.value,'btnsubir');" />
                                    <a id="btnsubirArchivoRepago" class="btnIngresar" href="#" style="display: none;">Subir</a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <br />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <table>
                                        <tr>
                                            <td>
                                                <b style="text-decoration: underline">Importante</b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Debe crear un Excel, con una sola columna, cuya cabecera se llame "Id_Beneficiario" y la Hoja de trabajo se llame "Beneficiarios".
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <br />
                                    @Html.LabelForModel(Model.Mensaje)
                                </td>
                            </tr>
                        </table>
                        <br />
                        <div>
                            @if (Model.Importado)
                            {
                                <a class="btnIngresar" id="btnProcesarLiquidacionRepago">Siguiente</a>
                            }
                            @Html.ActionLink("Cancelar", "Index", "Liquidacion", null, new { Class = "btnIngresar" })</div>
                        <br />
                    </fieldset>
                </td>
            </tr>
        </table>
        @Html.HiddenFor(c => c.Archivo)
        @Html.HiddenFor(c => c.Proceso)
        @Html.HiddenFor(c => c.Conceptos.Selected)
        @Html.HiddenFor(c => c.Programas.Selected)
        @Html.HiddenFor(c => c.FechaLiquidacion)
        @Html.HiddenFor(c => c.Observacion)
        @Html.HiddenFor(c => c.NroResolucion)
        @Html.HiddenFor(c => c.Convenios.Selected)

    }
</div>
