@model PermisosVista
@{
    ViewBag.Title = "Permisos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var acciones = ViewData["Acciones"] as IList<string>;
}
@section Scripts{
    @Content.Script("SGE.Permisos.js", Url)
}
<div class="box">
    <h2>
        Asignar Permisos</h2>
    @using (Html.BeginForm("IndexPager", "Permisos", FormMethod.Post, new { Id = "FormIndexPermisos" }))
    {
        <table style="width: 930px; text-align: center; margin-left: auto; margin-right: auto;">
            <tr>
                <td>
                    <fieldset style="width: 925px;">
                        <legend><b>Filtros</b></legend>
                        <table width="100%">
                            <tr>
                                <td style="width: 20%; text-align: right;">
                                    <b>Rol: </b>
                                </td>
                                <td style="width: 80%; text-align: left;">
                                    @Html.TextBoxFor(c => c.Nombre)
                                </td>
                            </tr>
                        </table>
                        <div class="div-filtro">
                            <div class="div-filtro-btn">
                                <p>
                                    <a class="btnIngresar" href="#" id="Buscar">Buscar</a></p>
                            </div>
                        </div>
                    </fieldset>
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td style="font-weight: bold">
                    <div id="titulo">
                    </div>
                    <div id="DivSuperviciones">
                        @Html.Partial("_Lista", Model)
                    </div>
                </td>
            </tr>
        </table>
        @Html.Partial("_Pager", Model.Pager)
    }
</div>
