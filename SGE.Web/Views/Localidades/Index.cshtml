@model LocalidadesVista
@{
    ViewBag.Title = "Localidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var acciones = ViewData["Acciones"] as IList<string>; 
}
@section Scripts{
    @Content.Script("SGE.Localidades.js", Url)
}
<div class="box">
    <h2>
        Listado de Localidades</h2>
    @using (Html.BeginForm("IndexPager", "Localidades", FormMethod.Post, new { Id = "FormIndexLocalidad" }))
    {
        <table align="center" style="width: 930px;">
            <tr>
                <td>
                    <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 925px;
                        text-align: center;">
                        <legend style="color: #FF9900"><b>Filtro</b></legend>
                        <table style="width: 924px;">
                            <tr>
                                <td style="width: 25%; text-align: right;">
                                    <b>Localidad: </b>
                                </td>
                                <td style="width: 75%; text-align: left;">
                                    @Html.TextBoxFor(c => c.DescripcionBusca, new { style = "width: 60%", MaxLength = "90" })
                                </td>
                            </tr>
                        </table>
                        <div class="div-filtro">
                            <div class="div-filtro-btn">
                              <p>
                                <a class="btnIngresar" href="#" id="Buscar">Buscar</a>
                                @if (acciones.Contains(((int)Enums.Acciones.Agregar).ToString()) || acciones.Contains(((int)Enums.Acciones.Modificar).ToString()))
                                {
                                    @Html.ActionLink("Agregar", "Agregar", "Localidades", null, new { Class = "btnIngresar" })
                                }
                              </p>
                            </div>
                        </div>
                    </fieldset>
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td>
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td style="font-weight: bold">
                    <div id="titulo">
                    </div>
                    <div id="DivSuperviciones">
                        @Html.Partial("_Lista", Model)
                    </div>
                </td>
            </tr>
        </table>
        @Html.Partial("_Pager", Model.Pager)
    }
</div>
