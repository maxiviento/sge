@model PersonaVista
@{
    ViewBag.Title = "Persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    @Content.Script("SGE.Personas.js", Url)
}
<div class="box">
    <h2>
        Persona</h2>
    @using (Html.BeginForm("ModificarPersona", "Personas", FormMethod.Post, new { Id = "FormularioPersona" }))
    {
        <table align="center" style="width: 930px; border: 1px">
            <tr>
                <td>
                    <fieldset style="width: 925px;">
                        <legend align="center"><b>@Model.Accion</b></legend>
                        <table align="left" style="width: 920px;">
                            <tr>
                                <td align="right" valign="top">
                                    <b>Apellido: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
                                        @Html.TextBoxFor(model => model.apellido, new { disabled = "disabled", style = "width:300px;" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(model => model.apellido, new { style = "width:300px;", MaxLength = "100" })
                                    }
                                </td>
                                <td align="right" valign="top">
                                    <b>Nombre: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
                                        @Html.TextBoxFor(model => model.nombre, new { disabled = "disabled", style = "width:300px;" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(model => model.nombre, new { style = "width:300px;", MaxLength = "100" })
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td align="right" valign="top">
                                    <b>DNI: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
                                        @Html.TextBoxFor(model => model.dni, new { disabled = "disabled", style = "width:300px;" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(model => model.dni, new { style = "width:300px;", MaxLength = "100" })
                                    }
                                </td>
                                <td align="right" valign="top">
                                    <b>CUIL: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
                                        @Html.TextBoxFor(model => model.cuil, new { disabled = "disabled", style = "width:300px;" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(model => model.cuil, new { style = "width:300px;", MaxLength = "100" })
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td align="right" valign="top">
                                    <b>CELULAR: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
                                        @Html.TextBoxFor(model => model.celular, new { disabled = "disabled", style = "width:300px;" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(model => model.celular, new { style = "width:300px;", MaxLength = "100" })
                                    }
                                </td>
                                <td align="right" valign="top">
                                    <b>TELEFONO: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
                                        @Html.TextBoxFor(model => model.telefono, new { disabled = "disabled", style = "width:300px;" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(model => model.telefono, new { style = "width:300px;", MaxLength = "100" })
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td align="right" valign="top">
                                    <b>MAIL: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
                                        @Html.TextBoxFor(model => model.mail, new { disabled = "disabled", style = "width:300px;" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(model => model.mail, new { style = "width:300px;", MaxLength = "100" })
                                    }
                                </td>
                                <td align="right" valign="top">
                                    <b>@Html.LabelFor(model => model.departamentos): </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
                                        @Html.EditorFor(model => model.departamentos, new { disabled = "disabled", style = "width:220px;" })
                                    }
                                    else
                                    {
                                        @Html.EditorFor(model => model.departamentos, new { style = "width:220px;" })
                                    }
                                </td>
                            </tr>

                            <tr>
                                <td align="right" valign="top">
                                    <b>@Html.LabelFor(model => model.Localidades): </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
                                        @Html.EditorFor(model => model.Localidades, new { disabled = "disabled", style = "width:220px;" })
                                    }
                                    else
                                    {
                                        @Html.EditorFor(model => model.Localidades, new { style = "width:220px;" })
                                    }
                                </td>
                                <td align="right" valign="top">
                                    <b>@Html.LabelFor(model => model.barrios): </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
                                        @Html.EditorFor(model => model.barrios, new { disabled = "disabled", style = "width:220px;" })
                                    }
                                    else
                                    {
                                        @Html.EditorFor(model => model.barrios, new { style = "width:220px;" })
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td align="right">
                                    <b>Empleado: </b>
                                </td>
                                <td align="left" valign="middle" colspan="2">
                                    @{
                                    if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                    {
@*                                        @Html.RadioButtonFor(c => c.empleado == "S", true, new { @disabled = "disabled" }) <span>Si</span>
                                        @Html.RadioButtonFor(c => c.empleado == "N", false, new { @disabled = "disabled" }) <span>No</span>*@
                                    @Html.RadioButton("empleado", "S", (Model.empleado == "S" ? true : false), new { @disabled = "disabled" })<span>Si</span>
                                    @Html.RadioButton("empleado", "N", (Model.empleado == "N" ? true : false), new { @disabled = "disabled" })<span>No</span>
                                
                                    }
                                    else
                                    {
                                    @Html.RadioButton("empleado", "S", (Model.empleado == "S" ? true : false), new { Class = "ClassEmpleado" })<span>Si</span>
                                    @Html.RadioButton("empleado", "N", (Model.empleado == "N" ? true : false), new { Class = "ClassEmpleado" })<span>No</span>
                                    }
                                    }
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                        </table>
                        @Html.ValidationSummary(false)
                    </fieldset>
                </td>
            </tr>
        </table>
        <br />
        @Html.HiddenFor(model => model.Accion)
        @Html.HiddenFor(model => model.id_persona)
        @Html.HiddenFor(model => model.id_localidad)
        @Html.HiddenFor(model => model.id_barrio)
        @Html.HiddenFor(model => model.empleado)
   //@Html.HiddenFor(model => model.id)
        <table id="btnfin" width="100%">
            <tr>
                <td align="center" valign="middle">
                    @switch (Model.Accion)
                    {
                        case "Ver":
                            break;
                        case "Agregar":
                        <a class="btnIngresar" href="#" id="Agregar">Guardar</a>
                            break;
                        case "Modificar":
                        <a class="btnIngresar" href="#" id="Modificar">Guardar</a>
                            break;
                        @*case "Eliminar":
                        <a class="btnIngresar" href="#" id="Eliminar">Eliminar</a>
                            break;*@
                    }
                    &nbsp;&nbsp;@Html.ActionLink("Cancelar", "Index", "Personas", null, new { Class = "btnIngresar" })
                </td>
            </tr>
        </table>
        if (@Model.Accion != "Agregar")
        {        
                    <br />
<div class="box" style="width: 500px;text-align:center;">    
        <h2>
        Roles como Actor</h2>
        <table align="center" style="width: 490px; border: 1px">
        <thead>
                <tr>
