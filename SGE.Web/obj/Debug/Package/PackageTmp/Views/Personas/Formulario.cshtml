                <td align="left" valign="middle">
                     @item.ID_ACTOR
                </td>
                <td align="left" valign="middle">
                     @item.N_ACTOR_ROL
                </td>
            </tr>
            }
        }
             </tbody>
         </table>
         </div>
        <br /> 
        }
        <table>
            <tr>
                <td>
                    <div id="MensajeError">
                        @TempData["MensajeError"]
                    </div>
                </td>
            </tr>
        </table>
    }
</div>
