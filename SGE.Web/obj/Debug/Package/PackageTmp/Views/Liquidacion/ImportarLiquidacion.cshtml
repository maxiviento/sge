@model ImportarLiquidacionVista
@{
    ViewBag.Title = "Importar Liquidacion";
    ViewBag.SubMenuSelected = "ImportarLiquidacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    @Content.Script("SGE.Liquidacion.js", Url)
}
<div class="box">
    <h2>
        Liquidación - Importar</h2>
    @using (Html.BeginForm("SubirArchivo", "Liquidacion", FormMethod.Post, new { id = "FormImportar", enctype = "multipart/form-data" }))
    {
        <table align="center" style="width: 950px;">
            <tr>
                <td>
                    <fieldset style="width: 925px;">
                        <legend><b>Importar Liquidación</b></legend>
                        <table align="left" style="width: 920px;">
                            <tr>
                                <td align="right">
                                    <b>Fecha Liquidación: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @Html.TextBoxFor(model => model.Liquidacion.FechaLiquidacion, new { disabled = "disabled", style = "width:70px;" })
                                </td>
                                <td align="right">
                                    <b>Programa: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @Html.TextBoxFor(model => model.Liquidacion.Programa, new { disabled = "disabled", style = "width:250px;" })
                                </td>
                            </tr>
                            <tr>
                                <td align="right">
                                    <b>Resolución: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @Html.TextBoxFor(model => model.Liquidacion.NroResolucion, new { disabled = "disabled", style = "width:100px;" })
                                </td>
                                <td align="right">
                                    <b>Cantidad Beneficiarios: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @Html.TextBoxFor(model => model.Liquidacion.CantBenef, new { disabled = "disabled", style = "width:100px;" })
                                </td>
                            </tr>
                        </table>
                        <fieldset style="width: 920px;">
                            <legend><b>Archivo para Importar</b></legend>
                            <table align="center" style="width: 915px;">
                                <tr>
                                    <td>
                                        <input type="file" id="archivoliquidacion" name="archivoliquidacion" size="20" onchange="check_extension(this.value,'btnsubir');" />
                                        <a id="btnsubir" class="btnIngresar" href="#" style="display: none;">Subir</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <br />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <br />
                                        @Html.LabelForModel(Model.Mensaje)
                                    </td>
                                </tr>
                            </table>
                             </fieldset>
                            <br />
                            <div>
                                @if (Model.Importado)
                                {
                                    <a class="btnIngresar" id="btnProcesarLiquidacion">Procesar</a>
                                }
                                @Html.ActionLink("Cancelar", "Index", "Liquidacion", null, new { Class = "btnIngresar" })</div>
                            <br />
                       
                    </fieldset>
                </td>
            </tr>
        </table>
        @Html.HiddenFor(c => c.Archivo)
        @Html.HiddenFor(c => c.Proceso)
        @Html.HiddenFor(c => c.IdLiquidacion)
    }
</div>
<div id="dialog" title="Mensaje">
    <p>
        La importación se realizó correctamente.</p>
</div>
