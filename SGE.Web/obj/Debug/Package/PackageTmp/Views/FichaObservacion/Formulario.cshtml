@model FichaObservacionVista
@{
    ViewBag.Title = "Observación";
}
@section Scripts{
    @Content.Script("SGE.FichaObservacion.js", Url)
}
<div class="box">
    <h2>
        Observación</h2>
    @using (Html.BeginForm("ModificarObservacion", "FichaObservacion", FormMethod.Post, new { Id = "FormularioObservacion"}))
    {
        <table align="center" style="width: 930px;">
            <tr>
                <td>
                    <fieldset style="width: 925px;">
                        <legend align="center"><b>@Model.Accion</b></legend>
                        <table align="left" style="width: 920px;">
                            <tr>
                                <td style="text-align: left; width: 20%;">
                                    <b>Observación:</b>
                                </td>
                             </tr>
                             <tr>
                                    <td valign="middle" style="text-align: left; width: auto;">
                                        @if (Model.Accion == "Ver" || Model.Accion == "Eliminar")
                                        {
                                            @Html.TextAreaFor(model => model.Descripcion, new { disabled = "disabled", style = "width:100%;height: 300px;" })
                                        }
                                        else
                                        {
                                            @Html.TextAreaFor(model => model.Descripcion, new { style = "width:100%;height: 300px;" })
                                        }
                                    </td>
                            </tr>
                        </table>
                    </fieldset>
                </td>
            </tr>
        </table>
        @Html.ValidationSummary(false)
        @Html.HiddenFor(model => model.IdFicha)
        @Html.HiddenFor(model => model.IdFichaObservacion)
        @Html.HiddenFor(model => model.Accion)
        @Html.HiddenFor(model => model.Descripcion)
         @Html.HiddenFor(model => model.AccionFicha)
        <table id="btnfin" width="100%">
            <tr>
                <td align="center" valign="middle">
                    @switch (Model.Accion)
                    {
                        case "Ver":
                            break;
                        case "Agregar":           
                            <a class="btnIngresar" href="#" id="Agregar">Guardar</a>
                            break;
                        case "Modificar":
                            <a class="btnIngresar" href="#" id="Modificar">Guardar</a>
                            break;
                        case "Eliminar": 
                            <a class="btnIngresar" href="#" id="Eliminar">Eliminar</a>
                            break;
                        default:
                            break;
                    }
                   <a class="btnIngresar" href="#" id="VolverFormListado">Volver</a>
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td>
                    <div id="MensajeError">
                        @TempData["MensajeError"]
                    </div>
                </td>
            </tr>
        </table>
    }
</div>

<div id="dialogConfirmarEliminacion" title="Mensaje">
    <p>
        ¿Está seguro que desea eliminar esta observación?</p>
</div>