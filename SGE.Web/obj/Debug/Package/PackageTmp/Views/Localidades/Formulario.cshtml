@model LocalidadVista
@{
    ViewBag.Title = "Localidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    @Content.Script("SGE.Localidades.js", Url)
}
<div class="box">
    <h2>
        Localidad</h2>
    @using (Html.BeginForm("ModificarLocalidad", "Localidades", FormMethod.Post, new { Id = "FormularioLocalidad" }))
    {
        <table align="center" style="width: 930px;">
            <tr>
                <td>
                    <fieldset style="width: 925px;">
                        <legend align="center"><b>@Model.Accion</b></legend>
                        <table align="left" style="width: 920px;">
                            <tr>
                                <td align="right" valign="top">
                                    <b>Nombre: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver")
                                    {
                                        @Html.TextBoxFor(model => model.Nombre, new { disabled = "disabled", style = "width:400px;" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(model => model.Nombre, new { style = "width:400px;", MaxLength = "100" })
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td align="right" valign="top">
                                    <b>@Html.LabelFor(model => model.NombreDepartamentoCombo): </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver")
                                    {
                                        @Html.TextBoxFor(model => model.NombreDepartamento, new { disabled = "disabled", style = "width:220px;" })
                                    }
                                    else
                                    {
                                        @Html.EditorFor(model => model.NombreDepartamentoCombo, new { style = "width:220px;" })
                                    }
                                </td>
                            </tr>
                        </table>
                        @Html.ValidationSummary(false)
                    </fieldset>
                </td>
            </tr>
        </table>
        @Html.HiddenFor(model => model.Accion)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.NombreDepartamento)
        <table id="btnfin" width="100%">
            <tr>
                <td align="center" valign="middle">
                    @switch (Model.Accion)
                    {
                        case "Ver":
                            break;
                        case "Agregar":
                        <a class="btnIngresar" href="#" id="Agregar">Guardar</a>
                            break;
                        case "Modificar":
                        <a class="btnIngresar" href="#" id="Modificar">Guardar</a>
                            break;
                        default:
                            break;
                    }
                    &nbsp; &nbsp;@Html.ActionLink("Cancelar", "Index", "Localidades", null, new { Class = "btnIngresar" })
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td>
                    <div id="MensajeError">
                        @TempData["MensajeError"]
                    </div>
                </td>
            </tr>
        </table>
    }
</div>
