@model ControlDatosVista
@if (Model.ListaControlDatos != null && Model.ListaControlDatos.Count > 0)
{ 
    <div style="text-align: center;">
        <table id="grilla" align="center" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30px" width="90px">
                        <div align="center">
                            Nro. Documento</div>
                    </th>
                    <th height="30px" width="100px">
                        <div align="center">
                            Apellido</div>
                    </th>
                    <th height="30px" width="100px">
                        <div align="center">
                            Nombre</div>
                    </th>
                    <th height="30px" width="100px">
                        <div align="center">
                            Programa</div>
                    </th>
                    <th height="30px" width="210px">
                        <div align="center">
                            Etapa</div>
                    </th>
                    <th height="30px" width="250px">
                        <div align="center">
                            Detalle</div>
                    </th>
                    <th height="30px" width="50px">
                        <div align="center">
                            Acciones</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaControlDatos)
                {
                    <tr>
                        <td height="30" style="text-align: left;">
                            @item.Identificador1
                        </td>
                        <td height="30" style="text-align: left;">
                            @item.Identificador2
                        </td>
                        <td height="30" style="text-align: left;">
                            @item.Identificador3
                        </td>
                        <td height="30" style="text-align: left;">
                            @item.N_Programa
                        </td>
                        <td height="30" style="text-align: left;">
                            @item.Etapa
                        </td>
                        <td height="30" style="text-align: left;">
                            @item.Descripcion
                        </td>
                        <td height="30" style="text-align:center;">
                            @Html.ActionLink("Modificar", "Modificar", "Beneficiarios", new { idBeneficiario = item.Id }, new { @class = "Modificar", title = "Modificar Beneficiario" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <table align="center" width="930px" cellpadding="0" cellspacing="0">
        <tr>
            <td width="930px">

                @Html.Partial("_SinDatos", "Control de Datos")
            </td>
        </tr>
    </table>
}