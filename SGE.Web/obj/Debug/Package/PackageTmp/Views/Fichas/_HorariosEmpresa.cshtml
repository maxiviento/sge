@model FichaVista
<table style="width: 890px;">
    <tr>
        <td style="width: 60px;">
            <b>Lunes</b>
        </td>
        <td style="width: 600px;">
            <table style="width: 590px;">
                @for (int i = 0; i < Model.HorarioLunes.Count; i++)
                {
                    <tr>
                        <td style="text-align: left; width: 120px;">
                            @Html.EditorFor(c => c.HorarioLunes[i])
                        </td>
                        <td style="text-align: left; width: 580px;">
                            @if (Model.Accion == "Modificar")
                            {
                                @Html.TextBoxFor(c => c.ObsLunes[i], new { style = "width:500px;", maxlength = 250 })
                            }
                            else
                            { 
                                @Html.TextBoxFor(c => c.ObsLunes[i], new { disabled = "disabled", style = "width:500px;", maxlength = 250 })
                            }
                        </td>
                    </tr>    
                }
            </table>
        </td>
        <td style="width: 200px;">
            @if (Model.Accion == "Modificar")
            {
                <a class="btnIngresar" title="Agregar Horario Lunes" id="AgregarHrLunes">Agregar Horario</a><span>&nbsp;&nbsp;</span>
                <a class="btnIngresar" title="Agregar Corte Lunes" id="AgregarCiLunes">Agregar Corte</a>
