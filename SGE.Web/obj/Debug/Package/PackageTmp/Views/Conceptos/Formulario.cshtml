@model ConceptoVista
@{
    ViewBag.Title = "Periodo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    @Content.Script("SGE.Conceptos.js", Url)
}
<div class="box">
    <h2>Periodo</h2>
    @using (Html.BeginForm("AccionConcepto", "Conceptos", FormMethod.Post, new { Id = "Formulario" }))
    { 
        <table style="width: 930px;">
            <tr>
                <td>
                    <fieldset style="width: 925px;">
                        <legend align="center"><b>@Model.Accion</b></legend>
                        <table align="left" style="width: 920px;">
                            <tr>
                                <td align="right">
                                    <b>Año: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @Html.TextBoxFor(c => c.Año, new { id = "Año", disabled = "disabled", style = "width:40px; text-align: right;", MaxLength = "4", @Class = "Ver" })
                                </td>
                                <td align="right">
                                    <b>Mes: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @Html.TextBoxFor(c => c.Mes, new { id = "Mes", disabled = "disabled", style = "width:40px; text-align: right;", MaxLength = "2", @Class = "Ver" })
                                </td>
                                <td align="right">
                                    <b>Observación: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @Html.TextAreaFor(c => c.Observacion, new { id = "Observacion", disabled = "disabled", style = "width:600px; height: 50px;", MaxLength = "1000", @Class = "Ver" })
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                </td>
            </tr>
        </table>
        @Html.HiddenFor(c => c.IdConcepto)
        @Html.HiddenFor(c => c.Accion)
        <table id="btnfin" width="100%">
            <tr>
                <td align="center" valign="middle">
                    <a id="btnGuardar" class="btnIngresar" href="#">Guardar</a>&nbsp;&nbsp;@Html.ActionLink("Cancelar", "Index", "Conceptos", null, new { Class = "btnIngresar" })
                </td>
            </tr>
            <tr>
                <td>@Html.ValidationSummary(false)
                </td>
            </tr>
        </table>
        <br />
    }
</div>
