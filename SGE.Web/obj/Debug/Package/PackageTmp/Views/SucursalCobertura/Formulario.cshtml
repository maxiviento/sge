@model SucursalCoberturaVista
@{
    ViewBag.Title = "Sucursal Cobertura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    @Content.Script("SGE.SucursalCobertura.js", Url)
}
<div class="box">
    <h2>
        Sucursal Cobertura</h2>
    @using (Html.BeginForm("ModificarSucursalCobertura", "SucursalCobertura", FormMethod.Post, new { Id = "FormularioSucursalCobertura" }))
    {
        <table align="center" style="width: 930px;">
            <tr>
                <td>
                    <fieldset style="width: 925px;">
                        <legend align="center"><b>@Model.Accion</b></legend>
                        <table align="left" style="width: 920px;">
                            <tr>
                                <td align="right" valign="top">
                                    <b>Localidad: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver" || Model.Accion == "Modificar")
                                    {
                                        @Html.EditorFor(c => c.Localidades, new { disabled = "disabled", style = "width:400px;" })
                                    }
                                    else
                                    {
                                        @Html.EditorFor(c => c.Localidades, new { style = "width:400px;"})
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td align="right" valign="top">
                                    <b>Sucursal: </b>
                                </td>
                                <td align="left" valign="middle">
                                    @if (Model.Accion == "Ver")
                                    {
                                       @Html.EditorFor(c => c.Sucursales, new { disabled = "disabled", style = "width:400px;" })
                                    }
                                    else
                                    {
                                        @Html.EditorFor(c => c.Sucursales)
                                    }
                                </td>
                            </tr>
                        </table>
                        @Html.ValidationSummary(false)
                    </fieldset>
                </td>
            </tr>
        </table>
        @Html.HiddenFor(model => model.Accion)
        @Html.HiddenFor(model => model.IdLocalidad)
        @Html.HiddenFor(model => model.IdSucursal)
        @Html.HiddenFor(model => model.IdTablaBcoCba)
        <table id="btnfin" width="100%">
            <tr>
                <td align="center" valign="middle">
                    @switch (Model.Accion)
                    {
                        case "Ver":
                            break;
                        case "Agregar":
                        <a class="btnIngresar" href="#" id="Agregar">Guardar</a>
                            break;
                        case "Modificar":
                        <a class="btnIngresar" href="#" id="Modificar">Guardar</a>
                            break;
                        default:
                            break;
                    }                    
                    &nbsp; &nbsp;@Html.ActionLink("Cancelar", "Index", "SucursalCobertura", null, new { Class = "btnIngresar" })
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td>
                    <div id="MensajeError">
                        @TempData["MensajeError"]
                    </div>
                </td>
            </tr>
        </table>
    }
</div>
